{% extends '/admin/base.html.twig' %}

{% block title %}Admin - Réponse{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">Réponse "{{ answer.text }}"</h1>
    <div class="container mt-5">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ answer.text }}</td>
            </tr>
            <tr>
                <th>IsCorrect</th>
                <td>{{ answer.isCorrect ? 'Yes' : 'No' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_admin_answer_index') }}">Retour à la liste des réponses</a>
        <br>
        <a href="{{ path('app_admin_answer_edit', {'id': answer.id}) }}">Modifier</a>
        {{ include('/admin/admin_answer/_delete_form.html.twig') }}
    </div>
{% endblock %}
