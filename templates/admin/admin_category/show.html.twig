{% extends '/admin/base.html.twig' %}

{% block title %}Catégorie - {{ category.title }}
{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-5 text-center">Categorie : {{ category.title }}</h1>
    <div class="container mt-5">
        <table class="table mt-2 text-center">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ category.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
            </tbody>
        </table>
        <a href="{{ path('app_admin_category_index') }}">Retour à la liste des catégories</a>

        <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}">Modifier</a>
    </div>
{% endblock %}
