{% extends 'layout/layout-center.html.twig' %}

{% block title %}Profil - Ligne bleue
{% endblock %}

{% block body %}
	<div class="container">
		{% for messages in app.flashes('sendOK') %}
			<div class="alert alert-success">
				{{ messages }}
			</div>
		{% endfor %}
		<h1 class="text-secondary mt-5 mb-5 text-uppercase text-center">Mon Profil</h1>
		<div class="d-flex justify-content-lg-around flex-column flex-lg-row mt-5">
			<div class="text-white">
				<div class="text-center text-lg-start">
					<p>{{ app.user.name }}</p>
					<p>{{ app.user.email }}</p>
					<p>Membre depuis le
						{{ app.user.dateInscription|date('d/m/Y') }}</p>
				</div>
			</div>
			<div class="text-center d-flex flex-column align-items-center mb-3">
				<a href="{{ path('app_add_friend') }}" class="btn btn-dark m-auto mb-3 btn-lg w-75 text-uppercase">
					<i class="fa-solid fa-people-group"></i>
					Ajoute tes amis !
				</a>
				<button type="button" class="btn btn-warning m-auto mb-3 btn-lg w-75 text-uppercase">
					<i class="fa-regular fa-share-from-square me-2"></i>
					Partager ma progression
				</button>
			</div>
		</div>
	</div>

	<div class="d-flex justify-content-lg-around flex-column flex-lg-row">
		<div class="w-100">
			<h2 class="text-light text-center">Ma progression</h2>
			<div class="bg-secondary rounded m-auto col-10 p-5 mb-2">
				<strong>Votre progression totale est de
					{{ calculPercent|number_format(0, '.', '') }}%</strong>
				<div class="progress mb-4">
					<div class="progress-bar-striped bg-success" role="progressbar" style="width: {{ calculPercent|number_format(0, '.', '') }}%" aria-valuenow="{{ calculPercent }}" aria-valuemin="0" aria-valuemax="100"></div>
				</div>

				{% for key, successByCategory in success %}
					<div class="card d-flex col-md-auto" style="height: 6rem; background-color: #F9C906;">
						<div class="m-auto">
							{{ categoryName[key] }}
						</div>
						<div class="circle-bar mb-2" {{ stimulus_controller('circleBar') }} data-value="{{ successByCategory }}"></div>
					</div>
				{% endfor %}
			</div>
		</div>
		<div class="w-100">
			<h2 class="text-light text-center">Mes favoris</h2>
			<div class="bg-secondary rounded ms-1 p-2">
				<div class="swiper mySwiperFavorite">
					<div class="swiper-wrapper">
						{% set numberOfFavorites = 0 %}
						<div class="swiper-slide w-100 pt-4">
							<ul class="w-50 m-auto pb-4 list-unstyled">
								{% for tutorial in favoris %}
									{% if numberOfFavorites < 5 %}
										<li class="link-animation">
											<i class="fa-solid fa-star me-3"></i>
											<a class="text-decoration-none text-dark" href="{{ path("tutorial_show", {'slug': tutorial.slug}) }}">
												{{ tutorial.name }}
											</a>
										</li>
										{% set numberOfFavorites = numberOfFavorites + 1 %}
								{% else %}
									</ul>
								</div>
								<div class="swiper-slide w-100 pt-4">
									<ul class="w-50 m-auto pb-4 list-unstyled">
										{% set numberOfFavorites = 1 %}
										<li class="link-animation">
											<i class="fa-solid fa-star me-3"></i>
											<a class="text-decoration-none text-dark" href="{{ path("tutorial_show", {'slug': tutorial.slug}) }}">
												{{ tutorial.name }}
											</a>
										</li>
									{% endif %}
								{% endfor %}
							</ul>
						</div>
					</div>
					<div class="swiper-button-next text-success"></div>
					<div class="swiper-button-prev text-success"></div>
					<div class="swiper-pagination-favorite text-center"></div>
				</div>
			</div>
		</div>
	</div>

	{% for status in ['accepted', 'pending'] %}
		<div class="row justify-content-center mt-5">
			<div class="col-lg-6">
				<div class="text-center">
					<h1 class="text-light">{{ status == 'accepted' ? 'Mes amis' : 'Demandes en attente' }}</h1>
					<div class="bg-secondary rounded m-auto p-5">
						{% set friends = app.user.friends|filter(friend => friend.status == status)|merge(app.user.friendOf|filter(friend => friend.status == status)) %}
						<div class="row">
							{% for friend in friends %}
								{% set userFriend = friend.sendTo == app.user ? friend.sendBy : friend.sendTo %}
								<div class="col-md-4">
									<div class="card mb-4" style="min-height: 14rem;">
										<div class="card-body">
											<h5 class="card-title">{{ userFriend.name|title }}</h5>
											<p>
												{% if userFriend.avatar is null %}
													<i class="fa-solid fa-user fa-2x text-primary"></i>
												{% else %}
													<img src="{{ asset('build/avatars/' ~ userFriend.avatar.getPath()) }}" alt="Avatar" class="avatar">
												{% endif %}
											</p>
											<a href="{{ path('app_remove_friend', { id: friend.id }) }}" class="btn btn-danger btn-sm">
												Retirer
											</a>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}
